<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Order History — GreenShop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/styles.css" rel="stylesheet">
</head>
<body>

  <%- include('partials/header') %>

  <main class="container py-5">
    <h2 class="mb-4">Order History</h2>

    <% if (!orders || orders.length === 0) { %>
      <p class="text-muted">No orders placed yet.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered align-middle">
          <thead class="table-light">
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Total (£)</th>
              <th>Status</th>
              <th>Date</th>
              <th>Items</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(o => { %>
              <tr>
                <td><%= o._id || 'N/A' %></td>
                <td><%= o.payer?.name || 'Anonymous' %></td>
                <td>£<%= o.total.toFixed(2) %></td>
                <td><span class="badge bg-success"><%= o.status %></span></td>
                <td><%= o.createdAt ? o.createdAt.toDateString() : '' %></td>
                <td>
                  <ul class="list-unstyled mb-0">
                    <% o.items.forEach(i => { %>
                      <li><%= i.qty %> × <%= i.name %> (£<%= i.price %>)</li>
                    <% }) %>
                  </ul>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </main>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
